</table>
<br />
<h2><%= t(:closed_projects) %></h2>
<table class="list">
  <%= render 'table_header' %>
  <%= render 'table_body', :list => @full_list[:closed], :custom_fields => @list_handler.custom_fields %>
</table>
<br />
<h2><%= t(:archived_projects) %></h2>
<table class="list">
  <%= render 'table_header' %>
  <%= render 'table_body', :list => @full_list[:archived], :custom_fields => @list_handler.custom_fields %>
</table>
