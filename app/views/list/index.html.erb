<div class="tabs">
  <ul>
    <li><a href="/responsibility_list" class="selected" id="tab-list">Responsibility list</a></li>
    <li><a href="/memberships" id="tab-memberships">Memberships</a></li>
  </ul>
</div>

<h1><%= t(:responsibility_list) %></h1>
<h2><%= t(:open_projects) %></h2>
