<%= render :partial => 'resp_navbar' %>

<h1 style="padding-bottom:15px;">Memberships</h1>

<%= search_form_for @search, url: membership_list_path, id: "search-form" do |f| %>
  <fieldset>
    <legend>Filters</legend>
    <%= select_with_caption :project_id, 'Filter project', options_from_collection_for_select(Project.all, "id", "name", selected: params[:project_id]), class: "form-control", :onchange => "this.form.submit(); return false;" %>

    <%= select_with_caption :user_id, 'Filter user', options_from_collection_for_select(User.all, "id", "fullname_with_login", selected: params[:user_id]), class: "form-control", :onchange => "this.form.submit(); return false;" %>

    <%= select_with_caption :role_id, 'Filter role', options_from_collection_for_select(Role.all, "id", "name", selected: params[:role_id]), class: "form-control", :onchange => "this.form.submit(); return false;" %>

    <%= label_tag :given, 'all' %>
    <%= radio_button_tag :given, 'all', params[:given].blank? || params[:given] == 'all', :onchange => "this.form.submit(); return false;" %>
    <%= label_tag :given, 'given' %>
    <%= radio_button_tag :given, true, params[:given] == 'true', :onchange => "this.form.submit(); return false;" %>
    <%= label_tag :given, 'taken away' %>
    <%= radio_button_tag :given, false, params[:given] == 'false', :onchange => "this.form.submit(); return false;" %>

    <%= f.submit "search", class: "btn btn-primary", style: "margin-left:5px;" %>
    <%= link_to "reset filters", membership_list_path, class: "icon icon-reload" %>
  </fieldset>
<% end %>

<table class="list" style="margin-top:10px;">
  <thead>
    <tr>
      <th>project</th>
      <th>user</th>
      <th>role</th>
      <th>given / taken away</th>
      <th>date</th>
    </tr>
  </thead>
  <tbody>
      <% @memberships.each do |membership| %>
        <tr style="height:25px;">
          <td style="width:10%"><%= link_to membership.project, project_path(membership.project) %></td>
          <td style="width:10%"><%= multiple_user_link(membership.user.login) %></td>
          <td style="width:10%"><%= Role.find(membership.role_id).name %></td>
          <td style="width:10%"><%= render_membership_icon(membership) %></td>
          <td style="width:10%"><%= membership.created_at.to_s(:db) %></td>
        </tr>
      <% end %>
  </tbody>
</table>
<p class="pagination" style="padding-top:12px;"><%= pagination_links_full @paginate %></p>
